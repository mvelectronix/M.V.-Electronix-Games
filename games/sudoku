                color: var(--secondary);
                animation: bounce 2s infinite;
            }
            
            @keyframes bounce {
                0%, 100% { transform: translateX(0); }
                50% { transform: translateX(5px); }
            }
        }
        
        @media (max-width: 480px) {
            .sudoku-grid {
                max-width: 350px;
                max-height: 350px;
            }
            
            .sudoku-cell {
                font-size: 1.3rem;
            }
            
            .number-btn {
                height: 50px;
                font-size: 1.4rem;
            }
            
            .control-btn {
                padding: 16px 12px;
                font-size: 0.95rem;
            }
            
            .logo {
                font-size: 1.5rem;
            }
            
            .logo i {
                font-size: 1.7rem;
            }
            
            .company-name {
                font-size: 1.2rem;
            }
            
            .company-tagline {
                font-size: 0.8rem;
            }
        }
        
        /* Landscape mode optimizations */
        @media (max-height: 600px) and (orientation: landscape) {
            .game-container {
                flex-direction: row;
                align-items: flex-start;
            }
            
            .sudoku-grid {
                width: 60vh;
                height: 60vh;
            }
            
            .controls-section {
                flex-direction: row;
                flex-wrap: wrap;
            }
            
            .number-selector {
                order: 2;
                width: 100%;
            }
            
            .game-controls {
                order: 1;
                width: 100%;
            }
            
            .game-info {
                order: 3;
                width: 100%;
            }
            
            .brand-header {
                padding: 5px 0;
                margin-bottom: 10px;
            }
        }
        
        /* Game completion celebration */
        .confetti {
            position: fixed;
            width: 15px;
            height: 15px;
            background: var(--accent);
            top: -20px;
            opacity: 0;
            z-index: 999;
        }
        
        /* Loading animation */
        .loading {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(5, 5, 16, 0.9);
            z-index: 2000;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            gap: 20px;
        }
        
        .loading.show {
            display: flex;
            animation: fadeIn 0.3s;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        .spinner {
            width: 70px;
            height: 70px;
            border: 5px solid rgba(58, 134, 255, 0.3);
            border-radius: 50%;
            border-top-color: var(--primary);
            animation: spin 1s linear infinite;
        }
        
        @keyframes spin {
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
